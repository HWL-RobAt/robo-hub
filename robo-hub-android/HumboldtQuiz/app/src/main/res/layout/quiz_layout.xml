<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.hu_berlin.informatik.humboldtquiz.android.RoboCtrlActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/question"
        android:layout_weight="0.90"
        android:enabled="true"
        android:text="NÃ¤chste Frage"
        android:gravity="left"
        android:textSize="12sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A"
        android:id="@+id/button_a"
        android:onClick="onClickA"
        android:nestedScrollingEnabled="false"
        android:textSize="12sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="B"
        android:id="@+id/button_b"
        android:onClick="onClickB"
        android:textSize="12sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/button_c"
        android:onClick="onClickC"
        android:nestedScrollingEnabled="false"
        android:textSize="12sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="D"
        android:id="@+id/button_d"
        android:onClick="onClickD"
        android:nestedScrollingEnabled="false"
        android:visibility="invisible"
        android:textSize="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_result"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05"
        android:visibility="invisible"
        android:textSize="30dp"
        android:text="Richtig/Falsch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weiter"
        android:id="@+id/button_resume"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickBack"
        android:textSize="12sp" />
</LinearLayout>